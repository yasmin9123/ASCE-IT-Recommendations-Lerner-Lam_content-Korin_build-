{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/vector_record.schema.json",
  "title": "Vector Record",
  "type": "object",
  "required": [
    "schema_version",
    "record_id",
    "token_id",
    "object_id",
    "chunk_id",
    "text",
    "embedding_model",
    "embedding",
    "metadata"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "record_id": {
      "type": "string"
    },
    "token_id": {
      "type": "string"
    },
    "object_id": {
      "type": "string"
    },
    "chunk_id": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "embedding_model": {
      "type": "string"
    },
    "embedding": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "metadata": {
      "type": "object",
      "required": [
        "title",
        "object_type",
        "created_at",
        "source",
        "governance_tags",
        "attribution_tags"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "object_type": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "governance_tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "attribution_tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "policy_gate_refs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "hash": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}