{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/object_manifest.schema.json",
  "title": "Object Manifest",
  "type": "object",
  "required": [
    "schema_version",
    "manifest_id",
    "created_at",
    "objects",
    "hash_algorithm",
    "canonicalization"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "manifest_id": {
      "type": "string",
      "description": "Content-addressed identifier for this manifest."
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 datetime."
    },
    "created_by": {
      "type": "string"
    },
    "hash_algorithm": {
      "type": "string",
      "enum": [
        "sha256"
      ]
    },
    "canonicalization": {
      "type": "string",
      "enum": [
        "rfc8785-jcs",
        "sorted-keys-minified"
      ]
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "object_id",
          "object_type",
          "title",
          "source",
          "content_hash",
          "content_path"
        ],
        "properties": {
          "object_id": {
            "type": "string"
          },
          "object_type": {
            "type": "string",
            "description": "e.g., governance_policy, ethics_guidance, technical_note"
          },
          "title": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "source": {
            "type": "object",
            "required": [
              "provenance"
            ],
            "properties": {
              "provenance": {
                "type": "string",
                "description": "How/where the content originated."
              },
              "author": {
                "type": "string"
              },
              "organization": {
                "type": "string"
              },
              "published_date": {
                "type": "string"
              },
              "license": {
                "type": "string"
              },
              "citation": {
                "type": "string"
              }
            }
          },
          "content_hash": {
            "type": "string",
            "description": "Hash of canonical content bytes."
          },
          "content_path": {
            "type": "string"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  },
  "additionalProperties": false
}