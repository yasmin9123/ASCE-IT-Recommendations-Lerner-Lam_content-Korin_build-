{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/verification_validation_plan.schema.json",
  "title": "Verification & Validation Plan",
  "type": "object",
  "required": [
    "schema_version",
    "plan_id",
    "created_at",
    "scope",
    "checks",
    "acceptance_criteria"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "plan_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string"
    },
    "scope": {
      "type": "string"
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "check_id",
          "check_type",
          "description",
          "method",
          "severity"
        ],
        "properties": {
          "check_id": {
            "type": "string"
          },
          "check_type": {
            "type": "string",
            "enum": [
              "schema",
              "hash",
              "provenance",
              "attribution",
              "policy_gate",
              "retrieval",
              "factuality",
              "traceability"
            ]
          },
          "description": {
            "type": "string"
          },
          "method": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}